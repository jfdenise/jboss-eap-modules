<?xml version="1.0" ?>
<layer-spec xmlns="urn:jboss:galleon:layer-spec:1.0" name="datasources-web-server">
    <dependencies>
        <layer name="core-server"/>
        <layer name="web-server"/>
        <!-- to be replaced by datasources layer -->
        <layer name="elytron"/>
        <!-- to be removed when transactions layer is in WildFly -->
        <layer name="transactions"/>
    </dependencies>
    <!-- to be removed when datasources layer is in-->
    <feature spec="subsystem.datasources"/>
    <feature-group name="transactions-all"/>
    <feature-group name="jca"/>
</layer-spec>

